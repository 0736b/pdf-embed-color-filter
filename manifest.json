{
    "manifest_version": 3,
    "name": "PDF Embed Color Filter",
    "version": "1.0",
    "description": "Invert colors for comfortable night-time reading.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  